<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sanjeevkumar.sayings.MainActivity"
    android:background="@drawable/greenback">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="200dp"
    android:layout_alignParentBottom="true"
       android:src="@drawable/happygirls"
       />

   <TextView
       android:id="@+id/text1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
       android:fontFamily="serif"
       android:text="“When you‘re giving up,"
       android:textColor="@android:color/white"
       android:textSize="27dp"
       android:textStyle="bold|italic" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/text1"
       android:fontFamily="serif"
       android:text="someone is still going.”"
       android:textAlignment="textEnd"
       android:textColor="@android:color/white"
       android:textSize="27dp"
       android:textStyle="bold|italic"
       android:id="@+id/textView" />

   <pl.droidsonroids.gif.GifImageView
       android:layout_width="wrap_content"
       android:layout_height="250dp"
       android:layout_below="@+id/textView"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="24dp"
       android:src="@drawable/greenloading" />
</RelativeLayout>
