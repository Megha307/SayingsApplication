<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanjeevkumar.sayings.MenuActivity"
    android:background="@android:color/holo_green_dark"
    >
<TextView
    android:textStyle="bold"
    android:textAlignment="center"
    android:id="@+id/pagemenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text=" WHAT'S YOUR MOOD?? "
    android:textSize="30dp"
    android:textColor="@android:color/black"
    />


    <ImageView
        android:onClick="onClick"
        android:padding="10dp"
        android:layout_below="@id/pagemenu"
        android:id="@+id/happy"
        android:layout_width="180dp"
        android:layout_height="180dp"

        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adventure"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="60dp"
        android:layout_toStartOf="@+id/sad"
        android:text=" HAPPY "
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <ImageView
        android:onClick="onClick"
        android:padding="10dp"
        android:layout_toRightOf="@id/happy"
        android:layout_below="@id/pagemenu"
        android:layout_width="180dp"
        android:layout_height="180dp"

        android:scaleType="fitXY"
        android:id="@+id/sad"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/happy"
        android:text=" SAD "
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:onClick="onClick"
        android:padding="10dp"
        android:id="@+id/adventure"
        android:layout_width="180dp"
        android:layout_height="180dp"

        android:scaleType="fitXY"
        android:layout_below="@id/happy"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:text=" ADVENTOURS "
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:onClick="onClick"
        android:padding="10dp"
        android:id="@+id/inspire"
        android:layout_width="180dp"
        android:layout_height="180dp"

        android:scaleType="fitXY"
        android:layout_below="@id/sad"
        android:layout_toRightOf="@id/adventure"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/sad"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/adventure"
        android:text=" INSPIRATIONAL "
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/relax"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/adventure"
        android:onClick="onClick"
        android:padding="10dp"
        android:scaleType="fitXY"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@+id/adventure"
        android:layout_marginTop="38dp"
        android:text=" RELAXED "
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:onClick="onClick"
        android:padding="10dp"
        android:id="@+id/playful"
        android:layout_width="250dp"
        android:layout_height="200dp"

        android:scaleType="fitXY"
        android:layout_below="@id/inspire"
        android:layout_toRightOf="@id/relax"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginEnd="15dp"
        android:text=" PLAYFUL "
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />




</RelativeLayout>
